<% if leaders.any?  %>
    <div class="row">
        <% leaders.each do |leader| %>
            <div class='<%= class_string("col-12"=>true, "font-weight-bold"=>leader["position"] <= 3) %>'>
                <div class="row">
                    <div class="col-1 mr-1 text-nowrap"><%= leader["position"].ordinalize %></div>
                    <div class="col"><%= leader["username"] %></div>
                </div> 
            </div>
        <% end %>
    </div>
<% else %>
    <div class="no-leaders">
        No-one has started the quiz yet!
    </div>
<% end %>