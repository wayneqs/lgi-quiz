<!DOCTYPE html>
<html>
  <head>
    <title>LGI Away Day Quiz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
           <ul class="navbar-nav">
           <% unless @user %>
            <li class="nav-item small text-uppercase <%= active_if_on([welcome_path]) %>">
              <%= link_to 'Sign Up', welcome_path, class: "nav-link"%>
            </li>
           <% end %>
           <% if @quiz && @quiz.end_time.nil? %>
            <li class="nav-item small text-uppercase <%= active_if_on([find_next_question_path, ask_question_path, answer_question_path]) %>">
              <%= link_to 'Resume Quiz', find_next_question_path, class: "nav-link"%>
            </li>
           <% end %>
            <li class="nav-item small text-uppercase <%= active_if_on([stats_path]) %>">
              <%= link_to 'Leaderboard', stats_path, class: "nav-link"%>
            </li>
        </ul>
        <% if @user %>
          <ul class="navbar-nav">
            <li class="nav-item small text-uppercase ">
              <%= link_to "Delete User",
                  destroy_user_path,
                  method: :delete,
                  data: { confirm: "Are you sure you want to destroy your user? You will lose all your progress."},
                  class: "nav-link"%>
            </li>
          </ul>
        <% end %>
        </div>
      </nav>

    <%= yield %>
  </body>
</html>
