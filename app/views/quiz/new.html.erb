<div class="row text-center">
  <div class="col-lg-12">
      <div class="row mb-4">
          <div class="col">
            <h1>You're in team <span class="text-info"><%= @user.team %></span>!</h1>
            <p class="mt-4">Your computer generated name for the quiz is</p>
            <p class="h3"><mark><%= @user.name %></mark></p>
          </div>
      </div>
      <div class="row">
          <div class="col actions">
              <%= button_to "Start the quiz", create_quiz_path, class: "btn btn-primary text-uppercase"%>
          </div>
      </div>
  </div>
</div>