    <div class="col-8 p-3 mb-5 bg-light rounded">
        <div class="row">
            <div class="col-md-6 text-center">
                <div class="row mb-3">
                    <%= image_tag 'logo.svg', size: "120x120", class: "mx-auto d-block" %>
                </div>
                <h3 class="text-muted">LGI <mark>Cloud Strategy</mark> Quiz</h3>
            </div>
